<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>Blockchain Certificate</title>
  <base href="/">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"
    integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  <link rel="stylesheet" href="stylesheets/style.css">
</head>

<body>
  <%- include('partials/navbar-partial.ejs') %>

    <!--Name, Public Key, Location, Description, Password, Email-->

    <div class="row justify-content-center form-all">
      <div class="col-md-6">
        <div class="card">
          <header class="card-header">
            <h4 class="card-title mt-2">University Sign up</h4>
          </header>
          <article class="card-body">

            <form action="/university/register/submit" method="POST">
              <div class="form-row">
                <div class="col form-group">
                  <userName>University Name </userName>
                  <input name="name" required type="text" class="form-control" placeholder="">
                </div> <!-- form-group end.// -->
                <div class="col form-group">
                  <userName>Email</userName>
                  <input name="email" required type="email" class="form-control" placeholder=" ">
                </div> <!-- form-group end.// -->
              </div> <!-- form-row end.// -->
              <div class="form-group">
                <userName>Description</userName>
                <textarea name="description" required class="form-control" rows="3"
                  placeholder="Brief description of the university"></textarea>
              </div> <!-- form-group end.// -->
              <!-- form-group end.// -->
              <div class="form-row">
                <div class="form-group col-md-6">
                  <userName>Location</userName>
                  <input name="location" required type="text" class="form-control">
                </div> <!-- form-group end.// -->
                <div class="form-group col-md-6">
                  <userName>Country</userName>
                  <input type="text" class="form-control" value="India" readonly>
                  <input type="hidden" name="country" value="India">
                </div> <!-- form-group end.// -->
              </div> <!-- form-row.// -->
              <div class="form-group">
                <userName>Create Password</userName>
                <div class="input-group">
                  <input name="password" id="uniPassword" required class="form-control" type="password" minlength="6">
                  <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="toggleUniPass"
                      style="cursor:pointer;">&#128065;</button>
                  </div>
                </div>
              </div> <!-- form-group end.// -->
              <div class="form-group">
                <userName>Confirm Password</userName>
                <div class="input-group">
                  <input id="uniPasswordConfirm" required class="form-control" type="password" minlength="6">
                  <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="toggleUniPassConfirm"
                      style="cursor:pointer;">&#128065;</button>
                  </div>
                </div>
                <small id="uniPassMismatch" class="text-danger" style="display:none;">Passwords do not match.</small>
              </div> <!-- form-group end.// -->
              <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"> Register </button>
              </div> <!-- form-group// -->
              <small class="text-muted">By clicking the 'Sign Up' button, you confirm that you accept our Terms of use
                and Privacy Policy.</small>
            </form>
          </article> <!-- card-body end .// -->
          <div class="border-top card-body text-center">Have an account? <a href="/university/login">Log In</a></div>
        </div> <!-- card.// -->
      </div> <!-- col.//-->

    </div> <!-- row.//-->


    </div>
    <!--container end.//-->


</body>

</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
