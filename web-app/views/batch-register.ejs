<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>Batch Student Registration - Veritas Ledger</title>
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">
</head>

<body>
    <div class="app-wrapper">
        <%- include('partials/navbar-partial.ejs') %>
            <div class="page-bg-overlay">
                <div class="bg-grid"></div>
                <div class="bg-dots"></div>
            </div>

            <div class="container py-5" style="position: relative; z-index: 10;">
                <div class="auth-container mx-auto" style="max-width: 800px;">
                    <div class="auth-header text-center mb-4">
                        <div class="logo-box mx-auto d-flex align-items-center justify-content-center mb-3"
                            style="width: 60px; height: 60px; background: var(--primary-gradient); border-radius: 15px; color: white;">
                            <i data-feather="users" style="width: 32px; height: 32px;"></i>
                        </div>
                        <h1 class="h3 font-weight-bold" style="color: var(--primary);">Batch Student Registration</h1>
                        <p class="text-secondary small">Register multiple students at once using a CSV file. New student
                            accounts will be initialized on the blockchain.</p>
                    </div>

                    <article class="auth-body">
                        <% if (typeof errorMessage !=='undefined' && errorMessage) { %>
                            <div class="alert alert-danger" role="alert"
                                style="background: rgba(220, 38, 38, 0.05); border-color: rgba(220, 38, 38, 0.2); color: #dc2626; border-radius: 12px;">
                                <i data-feather="alert-circle" class="mr-2" style="width: 18px;"></i>
                                <strong>Error:</strong>
                                <%= errorMessage %>
                            </div>
                            <% } %>

                                <div class="mb-4 p-4"
                                    style="background: var(--bg-secondary); border-radius: 15px; border: 1px solid var(--border-light);">
                                    <h6 class="font-weight-bold mb-3" style="color: var(--primary);">CSV Format
                                        Requirements:</h6>
                                    <p class="text-muted small">The first row must be headers. Required columns:</p>
                                    <code
                                        style="display: block; padding: 12px; background: white; border-radius: 8px; color: var(--primary); font-family: monospace; border: 1px solid var(--border-light);">
                            studentName, studentEmail, password (optional)
                        </code>
                                    <p class="text-muted small mt-3 mb-0">
                                        <strong>Note:</strong> If password is not provided, it defaults to
                                        <code>TempPass123!</code>.
                                    </p>
                                </div>

                                <form action="/university/batch-register" method="POST" enctype="multipart/form-data"
                                    class="mb-4">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <div class="form-group mb-4">
                                        <label class="small font-weight-bold text-secondary">Select CSV File</label>
                                        <div class="custom-file">
                                            <input name="csvFile" type="file" class="custom-file-input" id="csvFile"
                                                accept=".csv" required>
                                            <label class="custom-file-label" for="csvFile"
                                                style="border-radius: 10px;">Choose file...</label>
                                        </div>
                                    </div>
                                    <button type="submit"
                                        class="btn btn-primary btn-block py-3 font-weight-bold shadow-sm"
                                        style="border-radius: 12px;">
                                        <i data-feather="upload-cloud" class="mr-2" style="width: 20px;"></i> Start Bulk
                                        Registration
                                    </button>
                                </form>

                                <% if (typeof results !=='undefined' && results && results.length> 0) { %>
                                    <div class="results-section mt-5">
                                        <h5 class="font-weight-bold mb-3" style="color: var(--primary);">Process Results
                                        </h5>
                                        <div class="table-responsive"
                                            style="max-height: 400px; overflow-y: auto; border-radius: 15px; border: 1px solid var(--border-light);">
                                            <table class="table table-hover mb-0">
                                                <thead style="background: var(--bg-secondary);">
                                                    <tr>
                                                        <th class="border-0">#</th>
                                                        <th class="border-0">Student Name</th>
                                                        <th class="border-0">Status</th>
                                                        <th class="border-0">Message</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% results.forEach(function(r, idx) { %>
                                                        <tr>
                                                            <td class="small text-muted">
                                                                <%= idx + 1 %>
                                                            </td>
                                                            <td class="font-weight-bold">
                                                                <%= r.student %>
                                                            </td>
                                                            <td>
                                                                <span
                                                                    class="badge badge-pill <%= r.status === 'success' ? 'badge-success' : 'badge-danger' %>"
                                                                    style="padding: 6px 12px;">
                                                                    <%= r.status==='success' ? 'SUCCESS' : 'FAILED' %>
                                                                </span>
                                                            </td>
                                                            <td
                                                                class="small <%= r.status === 'success' ? 'text-success' : 'text-danger' %>">
                                                                <%= r.message %>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                </tbody>
                                            </table>
                                        </div>

                                        <div class="d-flex justify-content-between align-items-center mt-3 p-3"
                                            style="background: var(--bg-secondary); border-radius: 10px;">
                                            <% let successCount=results.filter(r=> r.status === 'success').length; %>
                                                <p class="mb-0 small font-weight-bold">Total: <%= results.length %>
                                                </p>
                                                <div>
                                                    <span class="badge badge-success mr-2">
                                                        <%= successCount %> Succeeded
                                                    </span>
                                                    <span class="badge badge-danger">
                                                        <%= results.length - successCount %> Failed
                                                    </span>
                                                </div>
                                        </div>
                                    </div>
                                    <% } %>
                    </article>

                    <div class="auth-footer text-center mt-4">
                        <a href="/university/dashboard" class="back-link-modern"><i data-feather="arrow-left"></i> Back
                            to Dashboard</a>
                    </div>
                </div>
            </div>

            <%- include('partials/footer-partial.ejs') %>
    </div>

    <script nonce="<%= nonce %>" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script nonce="<%= nonce %>" src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
        crossorigin="anonymous"></script>
    <script nonce="<%= nonce %>" src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"
        crossorigin="anonymous"></script>
    <script nonce="<%= nonce %>">
        // Update file label on selection
        $('#csvFile').on('change', function () {
            var fileName = $(this).val().split('\\').pop();
            $(this).next('.custom-file-label').addClass("selected").html(fileName);
        });
    </script>
</body>

</html>