<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>Veritas Ledger - Verified Certificate</title>
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">
</head>

<body>
    <div class="app-wrapper">
        <div class="page-bg-overlay">
            <div class="bg-grid"></div>
            <div class="bg-dots"></div>
            <div class="bg-shape bg-shape-3"></div>
        </div>

        <%- include('partials/navbar-partial.ejs') %>

            <div class="container py-5" style="position: relative; z-index: 10;">
                <div class="text-center mb-5">
                    <div class="badge badge-pill badge-primary mb-3 px-3 py-2"
                        style="background: rgba(37, 99, 235, 0.1); color: var(--accent); border: 1px solid rgba(37, 99, 235, 0.2);">
                        <i data-feather="check-circle" class="mr-2" style="width: 16px; height: 16px;"></i>
                        CRYPTOGRAPHICALLY VERIFIED
                    </div>
                    <h1 class="display-4 font-weight-bold" style="color: var(--primary);">Verification Successful</h1>
                    <p class="text-secondary">This certificate has been validated against the Veritas Ledger blockchain.
                    </p>
                </div>

                <div class="auth-container mx-auto"
                    style="max-width: 900px; padding: 0; overflow: hidden; border-radius: 30px;">
                    <div class="cert-header p-5 text-center text-white" style="background: var(--primary-gradient);">
                        <div class="cert-logo mb-4">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2"
                                stroke-linecap="round" stroke-linejoin="round">
                                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                                <path d="M8 11h8M12 7v8"></path>
                            </svg>
                        </div>
                        <h2 class="h3 font-weight-bold mb-0">Veritas Official Record</h2>
                        <p class="opacity-75 small">Certificate ID: <%= certData._id %>
                        </p>
                    </div>

                    <div class="cert-body p-5 bg-white">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="small text-muted font-weight-bold text-uppercase">Student Name</label>
                                <p class="h5 font-weight-bold text-dark">
                                    <%= certData.studentName %>
                                </p>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="small text-muted font-weight-bold text-uppercase">Issuing
                                    University</label>
                                <p class="h5 font-weight-bold text-dark">
                                    <%= certData.universityName %>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="small text-muted font-weight-bold text-uppercase">Field of Study</label>
                                <p class="h5 text-dark">
                                    <%= certData.major %>
                                </p>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="small text-muted font-weight-bold text-uppercase">Date of Issuance</label>
                                <p class="h5 text-dark">
                                    <%= certData.dateOfIssuing %>
                                </p>
                            </div>
                        </div>

                        <% if (certData.rollNumber) { %>
                            <div class="row">
                                <div class="col-md-12 mb-4">
                                    <label class="small text-muted font-weight-bold text-uppercase">Roll Number</label>
                                    <p class="h5 text-dark font-italic">
                                        <%= certData.rollNumber %>
                                    </p>
                                </div>
                            </div>
                            <% } %>

                                <hr class="my-4">

                                <div class="blockchain-meta p-4"
                                    style="background: var(--bg-secondary); border-radius: 20px;">
                                    <h6 class="font-weight-bold mb-3" style="color: var(--primary);">Verified Blockchain
                                        Attributes</h6>
                                    <div class="row">
                                        <% Object.keys(proofData).forEach(function (key) { %>
                                            <% // Convert camelCase to Title Case with spaces let
                                                formattedKey=key.replace(/([A-Z])/g, ' $1' ).replace(/^./, str=>
                                                str.toUpperCase());
                                                %>
                                                <div class="col-sm-6 col-lg-3 mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <i data-feather="check" class="text-success mr-2"
                                                            style="width: 24px !important; height: 24px !important; min-width: 24px !important; min-height: 24px !important; stroke-width: 3px !important; flex-shrink: 0;"></i>
                                                        <span class="small"><strong>
                                                                <%= formattedKey %>:
                                                            </strong>
                                                            <%= proofData[key] %>
                                                        </span>
                                                    </div>
                                                </div>
                                                <% });%>
                                    </div>
                                </div>

                                <!-- New Blockchain Record Section -->
                                <% if (locals.ledgerData) { %>
                                    <div class="blockchain-record mt-4 p-4"
                                        style="background: #ffffff; border: 1px solid var(--border-color); border-radius: 20px; color: var(--text-primary); box-shadow: var(--shadow-sm);">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="icon-box mr-3"
                                                style="background: var(--primary-100); padding: 12px; border-radius: 14px; border: 1px solid var(--primary-200);">
                                                <i data-feather="database"
                                                    style="color: var(--primary) !important; stroke: var(--primary) !important; width: 22px; height: 22px; stroke-width: 3px !important;"></i>
                                            </div>
                                            <div>
                                                <h6 class="font-weight-bold mb-0" style="color: var(--primary);">
                                                    Blockchain Record</h6>
                                                <small class="text-muted">Direct Real-Time Ledger Query</small>
                                            </div>
                                        </div>

                                        <!-- Hash Comparison -->
                                        <div class="row mb-4">
                                            <div class="col-md-12">
                                                <label class="small font-weight-bold text-uppercase text-dark">On-Chain
                                                    Content Hash</label>
                                                <div class="d-flex align-items-center bg-white p-2 rounded border"
                                                    style="border-color: #dee2e6 !important;">
                                                    <code
                                                        class="text-dark small text-break mr-2"><%= ledgerData.certHash || ledgerData.certificateHash || 'N/A' %></code>
                                                    <i data-feather="check-circle" class="text-success"
                                                        style="width: 16px;"></i>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="accordion mt-3" id="ledgerAccordion">
                                            <div class="card bg-transparent border-0">
                                                <div class="card-header p-0" id="headingOne">
                                                    <h2 class="mb-0">
                                                        <button
                                                            class="btn btn-block text-left text-dark collapsed d-flex justify-content-between align-items-center p-3 shadow-sm"
                                                            style="background: #ffffff; border: 1px solid #dee2e6; border-radius: 10px;"
                                                            type="button" data-toggle="collapse"
                                                            data-target="#collapseOne" aria-expanded="false"
                                                            aria-controls="collapseOne">
                                                            <span>View Raw "World State" (JSON)</span>
                                                            <i data-feather="chevron-down"></i>
                                                        </button>
                                                    </h2>
                                                </div>

                                                <div id="collapseOne" class="collapse" aria-labelledby="headingOne"
                                                    data-parent="#ledgerAccordion">
                                                    <div class="card-body p-0">
                                                        <pre class="m-0 p-3 small text-dark"
                                                            style="background: #e9ecef; border-radius: 0 0 10px 10px; overflow-x: auto; border: 1px solid #dee2e6; border-top: 0;"><code><%= JSON.stringify(ledgerData, null, 2) %></code></pre>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                    </div>
                </div>

                <div class="text-center mt-5">
                    <a href="/verify" class="btn btn-primary px-5 py-3 shadow-lg"
                        style="border-radius: 30px; font-weight: 700;">Verify Another Document</a>
                    <div class="mt-3">
                        <a href="/" class="back-link-modern"><i data-feather="arrow-left"></i> Back to Homepage</a>
                    </div>
                </div>
            </div>

            <%- include('partials/footer-partial.ejs') %>
    </div>
</body>

</html>