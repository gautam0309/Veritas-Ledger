<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>Blockchain Certificate</title>
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">
    <style nonce="<%= nonce %>">
        .custom-file-label::after {
            height: 100%;
            display: flex;
            align-items: center;
        }
    </style>
</head>

<body>
    <div class="app-wrapper">
        <%- include('partials/navbar-partial.ejs') %>
            <div class="page-bg-overlay">
                <div class="bg-grid"></div>
                <div class="bg-dots"></div>
            </div>

            <div class="container py-5" style="position: relative; z-index: 10;">
                <div class="auth-container mx-auto" style="max-width: 800px;">
                    <div class="auth-header text-center mb-4">
                        <h1 class="h3 font-weight-bold" style="color: var(--primary);">Issue Certificate</h1>
                    </div>
                    <article class="auth-body">

                        <% if (typeof errorMessage !=='undefined' && errorMessage) { %>
                            <div class="alert alert-danger" role="alert"
                                style="background: rgba(248, 81, 73, 0.15); border-color: rgba(248, 81, 73, 0.3); color: #f85149; border-radius: 12px;">
                                <strong>Error:</strong>
                                <%= errorMessage %>
                            </div>
                            <% } %>

                                <form action="/university/issue" method="POST" enctype="multipart/form-data">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <div class="form-row">
                                        <div class="col form-group mb-3">
                                            <label class="small font-weight-bold text-secondary">Student Name</label>
                                            <input name="studentName" required type="text" class="form-control"
                                                placeholder="" style="border-radius: 10px;">
                                        </div> <!-- form-group end.// -->
                                        <div class="col form-group mb-3">
                                            <label class="small font-weight-bold text-secondary">Email</label>
                                            <input name="studentEmail" required type="email" class="form-control"
                                                placeholder=" " style="border-radius: 10px;">
                                        </div> <!-- form-group end.// -->
                                    </div> <!-- form-row end.// -->
                                    <div class="form-row">
                                        <div class="col form-group mb-3">
                                            <label class="small font-weight-bold text-secondary">Roll Number</label>
                                            <input name="rollNumber" required type="text" class="form-control"
                                                placeholder="e.g. 2301201182" style="border-radius: 10px;">
                                        </div> <!-- form-group end.// -->
                                    </div> <!-- form-row end.// -->
                                    <div class="form-group mb-3">
                                        <div class="form-row">
                                            <div class="col form-group">
                                                <label class="small font-weight-bold text-secondary">Major</label>
                                                <input name="major" required type="text" class="form-control"
                                                    placeholder="" style="border-radius: 10px;">
                                            </div> <!-- form-group end.// -->
                                            <div class="col form-group">
                                                <label class="small font-weight-bold text-secondary">CGPA</label>
                                                <input name="cgpa" required type="number" class="form-control"
                                                    step="0.01" min="0" max="10" placeholder="Out of 10"
                                                    style="border-radius: 10px;">
                                            </div> <!-- form-group end.// -->
                                        </div> <!-- form-group end.// -->
                                        <!-- form-group end.// -->
                                        <div class="form-row">
                                            <div class="form-group col-md-6 mb-3">
                                                <label class="small font-weight-bold text-secondary">Department
                                                    Name</label>
                                                <input name="department" required type="text" class="form-control"
                                                    style="border-radius: 10px;">
                                            </div> <!-- form-group end.// -->
                                            <div class="form-group col-md-6 mb-3">
                                                <label class="small font-weight-bold text-secondary">Date of
                                                    Issue</label>
                                                <input name="date" required type="date" class="form-control"
                                                    style="border-radius: 10px; color: #6c757d;"
                                                    onchange="this.style.color = this.value ? '#495057' : '#6c757d'">
                                            </div> <!-- form-group end.// -->
                                        </div> <!-- form-row.// -->
                                        <div class="form-row">
                                            <div class="form-group col-md-6 mb-3">
                                                <label class="small font-weight-bold text-secondary">Certificate Image
                                                    (Optional)</label>
                                                <div class="custom-file" style="height: calc(1.5em + 1.5rem + 2px);">
                                                    <input name="certificateImage" type="file" class="custom-file-input"
                                                        id="certImage" accept=".jpg,.jpeg,.png,.pdf"
                                                        style="height: 100%;">
                                                    <label class="custom-file-label" for="certImage"
                                                        style="border-radius: 10px; padding: 0.75rem 1rem; height: 100%; display: flex; align-items: center;">Choose
                                                        file...</label>
                                                </div>
                                                <small class="text-muted mt-1 d-block">Upload PDF/image of actual degree
                                                    (max 10MB)</small>
                                            </div>
                                            <div class="form-group col-md-6 mb-3">
                                                <label class="small font-weight-bold text-secondary">Expiry Date
                                                    (Optional)</label>
                                                <input name="expiryDate" type="date" class="form-control"
                                                    style="border-radius: 10px; color: #6c757d;"
                                                    onchange="this.style.color = this.value ? '#495057' : '#6c757d'">
                                                <small class="text-muted mt-1 d-block">Leave empty for non-expiring
                                                    certificates</small>
                                            </div>
                                        </div>
                                        <button type="submit"
                                            class="btn btn-primary btn-block py-3 font-weight-bold shadow-sm mt-3"
                                            style="border-radius: 12px;"> Issue Certificate </button>
                                    </div> <!-- form-group// -->
                                </form>
                    </article> <!-- card-body end .// -->
                </div> <!-- col.//-->

            </div> <!-- row.//-->


    </div>
    <!--container end.//-->


</body>

</html>
<script nonce="<%= nonce %>" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script nonce="<%= nonce %>" src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
    crossorigin="anonymous"></script>
<script nonce="<%= nonce %>" src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"
    crossorigin="anonymous"></script>
<script nonce="<%= nonce %>" src="/js/register.js"></script>
<script nonce="<%= nonce %>">
    // Update file label on selection
    $('#certImage').on('change', function () {
        var fileName = $(this).val().split('\\').pop();
        $(this).next('.custom-file-label').addClass("selected").html(fileName);
    });
</script>